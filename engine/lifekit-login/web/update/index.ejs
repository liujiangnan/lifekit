<%include ../commonejs/common.ejs%>
<%include ../commonejs/alertModal.ejs%>


<div class="container-fluid" style="height: 100%;padding-top: 40px;">
    <div class="row" style="height:100%;">
        <div class="col-md-2"></div>
        <div class="col-md-8" style="border: solid 1px #cccccc;padding-top: 40px;">
            <form id="userform" action="" class="form-horizontal" onSubmit="return false;"> 
                <div class="form-group">
                    <label class="col-sm-2 control-label" >Email:</label>
                    <div class="col-sm-10">
                        <input id="myEmail" name="myEmial" class="form-control" type="text" placeholder="请输入邮箱" value="<%=user.get("email")%>" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" >昵称:</label>
                    <div class="col-sm-10">
                        <input id="nc" name="nc" class="form-control" type="text" placeholder="请输入昵称" value="<%=user.get("name")%>" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" >手机号:</label>
                    <div class="col-sm-10">
                        <input id="phoneNum" name="phoneNum" class="form-control" type="tel" placeholder="请输入手机号" value="<%=user.get("phone")%>" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="text-center">
                        <button id="saveUser" type="button" class="btn btn-default">保存</button>
                        <button id="cancle" type="button" class="btn btn-default">取消</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>

<script type="text/javascript" src="/lifekit-login/web/update/index.js"></script> 